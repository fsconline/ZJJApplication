<?xml version="1.0" encoding="utf-8"?>
<!--按钮背景样式-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@color/bg_btn_default" />
    <!--圆角-->
    <corners
        android:bottomLeftRadius="@dimen/shape_btn_radius"
        android:bottomRightRadius="@dimen/shape_btn_radius"
        android:topLeftRadius="@dimen/shape_btn_radius"
        android:topRightRadius="@dimen/shape_btn_radius" />

    <!--实现应用背景颜色渐变-->
    <gradient
        android:startColor="#3BD2FF"
        android:endColor="#1CA8FF"
        android:angle="0"/>

</shape>