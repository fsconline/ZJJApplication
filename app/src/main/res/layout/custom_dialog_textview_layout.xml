<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="255dp"
    android:layout_height="150dp"
    android:background="@drawable/circle_gray_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_textview_layout_tv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="#ff54bda9"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_textview_layout_btn_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/type_btn_gray_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_38a3ee"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_textview_layout_btn_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/type_btn_gray_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_38a3ee"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>