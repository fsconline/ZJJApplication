<?xml version="1.0" encoding="utf-8"?><!--待办消息单据类型-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_style"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/h_100dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tab_item_image"
            android:layout_width="@dimen/h_30dp"
            android:layout_height="@dimen/h_30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/navigation_paydues"></ImageView>

        <TextView
            android:id="@+id/tab_item_text"
            android:layout_width="@dimen/h_80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ItemImage"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="其他非共用经费"
            android:textColor="@color/bg_navigation_btn_font"
            android:textSize="@dimen/size_navigation_btn_fount"></TextView>

    </LinearLayout>


    <com.jauker.widget.BadgeView
        android:id="@+id/tab_item_badge"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@color/bg_msg_overhead_mnyfont"
        android:gravity="center"
        android:minWidth="20dp"
        android:textColor="@color/white"
        android:textSize="12dp" />

